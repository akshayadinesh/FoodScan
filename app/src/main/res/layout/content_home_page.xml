<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.akshayadinesh.foodscan.HomePageActivity"
    tools:showIn="@layout/app_bar_home_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dietary Restrictions"
        android:textColor="#000"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox android:id="@+id/checkbox_meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_cheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_eggs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eggs"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_gluten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gluten"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_peanuts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peanuts"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food I Dislike"
        android:textColor="#000"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <CheckBox android:id="@+id/checkbox_meat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_cheese2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_milk2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_eggs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eggs"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_gluten2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gluten"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_peanuts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peanuts"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food I Like"
        android:textColor="#000"
        android:padding="10dp"
        android:paddingLeft="5dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <CheckBox android:id="@+id/checkbox_meat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_cheese3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_milk3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_eggs3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eggs"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_gluten3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gluten"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_peanuts3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peanuts"
            android:textSize="20sp"
            android:onClick="onCheckboxClicked"/>
    </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
